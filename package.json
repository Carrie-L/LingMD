{
  "name": "lingmd",
  "private": true,
  "version": "0.0.0",
  "main": "main/main.js",
  "author": "Ling",
  "license": "MIT",
  "scripts": {
    "start": "concurrently \"npm run start-react\" \"npm run start-electron\"",
    "start-react": "vite --host 127.0.0.1",
    "start-electron": "wait-on http://127.0.0.1:5173 && electron .",
    "build-react": "vite build",
    "dist": "npm run build-react && electron-builder"
  },
  "build": {
    "appId": "com.lingmd.app",
    "productName": "LingMD",
    "directories": {
      "output": "dist_electron"
    },
    "files": [
      "dist/**/*",
      "main/**/*",
      "package.json"
    ],
    "extraMetadata": {
      "main": "main/main.js"
    },
    "win": {
      "target": "nsis",
      "icon": "icons/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "icons/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "icons"
    }
  },
  "dependencies": {
    "dompurify": "^3.2.6",
    "electron-store": "^10.1.0",
    "github-markdown-css": "^5.8.1",
    "highlight.js": "^11.11.1",
    "juice": "^11.0.1",
    "marked": "^16.2.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "concurrently": "^9.2.1",
    "electron": "^37.4.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "vite": "^7.1.2",
    "wait-on": "^8.0.4"
  }
}
